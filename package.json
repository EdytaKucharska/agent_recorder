{
  "name": "agent-recorder",
  "version": "0.0.1",
  "private": true,
  "description": "Local-first flight recorder for Claude Code",
  "author": "Edyta Kucharska",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:core": "pnpm --filter @agent-recorder/core run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ar": "node packages/cli/dist/index.js",
    "ar:build": "pnpm -w --filter @agent-recorder/cli run build",
    "ar:start": "pnpm -w run ar:build && node --env-file=.env packages/cli/dist/index.js start",
    "ar:status": "node packages/cli/dist/index.js status"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
