{
  "name": "agent-recorder",
  "version": "2.0.8",
  "description": "Local-first flight recorder for Claude Code",
  "type": "module",
  "bin": {
    "agent-recorder": "./dist/index.js",
    "agent-recorder-hook": "./vendor/node_modules/@agent-recorder/hooks/handler.js",
    "agent-recorder-proxy": "./vendor/node_modules/@agent-recorder/stdio-proxy/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "vendor"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "bundle": "node dist/bundle.js",
    "prebuild:dist": "pnpm run build",
    "build:dist": "pnpm run bundle"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "commander": "^13.0.0",
    "fastify": "^5.0.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdytaKucharska/agent_recorder.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "flight-recorder",
    "agent",
    "observability"
  ],
  "author": "Edyta Kucharska",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0"
  }
}
