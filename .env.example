# Agent Recorder (local)
AR_LISTEN_PORT=8787
AR_UI_PORT=8789
AR_DB_PATH=.storage/agent-recorder.sqlite

# MCP Proxy (transparent proxy for recording tool calls)
AR_MCP_PROXY_PORT=8788
AR_DOWNSTREAM_MCP_URL=http://127.0.0.1:9999

# Telemetry (opt-in, disabled by default)
AGENT_RECORDER_TELEMETRY=off
POSTHOG_HOST=https://app.posthog.com
POSTHOG_API_KEY=

# Redaction (comma-separated keys to scrub from JSON)
AR_REDACT_KEYS=authorization,Authorization,api_key,apikey,token,access_token,refresh_token,secret,password
